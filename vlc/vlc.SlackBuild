export CPP=${CPP:-"cpp"}
export CXX=${CXX:-"g++"}
export AR=${AR:-"gcc-ar"}
export NM=${NM:-"gcc-nm"}
export RANLIB=${RANLIB:-"gcc-ranlib"}

